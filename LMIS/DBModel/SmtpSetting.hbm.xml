<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="LMIS.DBModel"
                   assembly="LMIS">


  <class name="SmtpSetting" table="SmtpSetting" lazy="false">

    <!-- Identity mapping -->
    <id name="SmtpID">
      <column name="SmtpID" />
      <generator class="native" />
    </id>

    <!-- Simple mappings -->
    <property name="ServerAddress" />
    <property name="ServerPort" />
    <property name="UserName" />
    <property name="Password" />
    <property name="FromName" />
    <property name="FromEmail" />
    <property name="EnableSSL" />
  </class>


</hibernate-mapping>